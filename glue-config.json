{
  "server": {
    "debug": {
      "$filter": "env",
      "$base": {
        "request": [
          "error"
        ]
      },
      "$default": {
        "log": [
          "error",
          "connection",
          "client"
        ]
      },
      "production" :{
        "log": [
          "error"
        ]
      }
    }
  },
  "connections": [
    {
      "port": 3000,
      "host": "localhost",
      "address": "0.0.0.0"
    }
  ],
  "registrations": [
    {
      "plugin": {
        "register": "good",
        "options": {
          "reporters": {
            "ConsoleReporter": [
              {
                "module": "good-squeeze",
                "name": "Squeeze",
                "args": [{ "log": "*", "response": "*", "error": "*" }]
              },
              {
                "module": "good-console"
              },
              "stdout"
            ]
          }
        }
      }
    },
    {
      "plugin": "inert"
    },
    {
      "plugin": "hapi-react-redux"
    },
    {
      "plugin": "./plugin.js"
    }
  ]
}
